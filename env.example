# This file is an example of the environment variables that can be set.
# Create a .env file (gitignored) in the root directory and populate it with your actual values.
# The application uses python-dotenv to load variables from the .env file.

# General Application Settings
LOG_LEVEL=INFO

# --- Infrastructure/Gateway ---
# Twilio Service (if used for telephony)
# Note: These are not currently specified as placeholders in config.yml's twilio_service section,
# but are common Twilio environment variables. The TwilioService class uses its own hardcoded defaults
# if these are not provided via a twilio_service section in config.yml that itself uses placeholders.
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_DEFAULT_CALLER_ID=

# --- Input Processing ---
# Speech To Text (STT) Services
DEEPGRAM_API_KEY=
ASSEMBLYAI_API_KEY= # Default: (empty string), Current STT provider in config.yml

# Acoustic Emotion Analyzer Service
ACOUSTIC_EMOTION_MODEL_PATH= # Default: path/to/acoustic_emotion_model.pkl

# --- Core Logic / Dialogue Management ---
# Rasa Service
RASA_SERVER_URL= # Default: rasa_server

# --- Specialist Modules / Tools ---
# Generic Sales Skill Service
GENERIC_SALES_MODEL_PATH= # Default: path/to/generic_sales_model.pkl
GS_PLAYBOOK_OPENING= # Default: path/to/data/sales_training/opening_lines.csv
GS_PLAYBOOK_OBJECTION= # Default: path/to/data/sales_training/objection_responses.json
GS_PLAYBOOK_CLOSING= # Default: path/to/data/sales_training/closing_playbook.txt

# Real Estate Knowledge Service
RE_TF_MODEL_BASE_PATH= # Default: /app/ml_models/
MLS_DB_HOST= # Default: localhost
MLS_DB_PORT= # Default: 5432
MLS_DB_USER= # Default: (empty string)
MLS_DB_PASS= # Default: (empty string)
MLS_DB_NAME= # Default: mls_data
RE_REGIONAL_DB_PATH= # Default: /path/to/data/real_estate/regional_metrics.db
RE_GLOSSARY_PATH= # Default: path/to/data/real_estate/glossary.json
RE_LEGAL_DOCS_PATH= # Default: path/to/data/real_estate/legal_docs/

# --- Response Generation ---
# Natural Language Generation (NLG) Services
LLAMA_MODEL_PATH= # Default: /path/to/your/llama_model_gguf
OPENAI_API_KEY= # Default: (empty string)
ANTHROPIC_API_KEY= # Default: (empty string)

# Text To Speech (TTS) Services
ELEVENLABS_API_KEY=
SESAME_CSM_URL= # Default: http://default_sesame_url

# --- MCPS Platform Integration (Optional) ---
# These are based on the commented-out section in the original config.yml
ENABLE_MCPS= # Default: false
MCPS_SERVER_URL= # Default: local_url
# AGENT_ID_ON_MCPS= # Example: RealEstateSalesAgent_001 (from original config comment)
# METRICS_PUSH_INTERVAL_SECONDS= # Example: 60 (from original config comment)
